###---i3-gaps---###
for_window [class="^.*"] border pixel 2
for_window [class="Yad"] floating enable
gaps inner $inner_gaps
gaps outer $outer_gaps


###---Ranger---###
bindsym $mod+Control+r exec termite -e ranger

###---Start a terminal ---###
bindsym $mod+Return exec termite

###---Screenshot types with 'scrot'---###
# All screens
bindsym Print exec --no-startup-id scrot 'scrot_%Y-%m-%d_%H%M%S.png' -e 'mv $f ~/Pictures/shots'

# Use the currently focused window
bindsym $mod+Print --release exec --no-startup-id scrot 'scrot_%Y-%m-%d_%H%M%S.png' -u -e 'mv $f ~/Pictures/shots'

# Choose a window or rectangle with the mouse
bindsym $mod+Shift+Print --release exec --no-startup-id scrot -s -e 'mv $f ~/Pictures/shots'


